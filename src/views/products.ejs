<!DOCTYPE html>
<html>
<head>
    <title>Fake Store</title>
    <style>
        .border{
            border: 1px solid black;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" >
</head>
 
<body class="container">
    <h1 class="bg-dark rounded text-white text-center">
    Product list
  </h1>   

  <table id="products-table" class="table table-striped m-2">
    <thead>
        <tr class="bg-primary text-white text-center">
            <th>Sr.No.</th>
            <th>Product_Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>
         <% data.forEach((item)=>{ %>
            <tr>
                
                <td class="border">
                    <%=item.id%> 
               </td>
                <td class="border">
                     <img width="200" src="<%=item.image%>" alt="ProductImg">  </br>
                </td>
                <td class="border">
                     <%=item.title%> 
                </td>
                <td class="border">
                    <%=item.category%>
                </td>
                <td class="border">
                     <%=item.price%>
                </td>
                <td class="border">
                     <%=item.description%>
                </td>
            </tr>
         <% }) %>
    </table>
    <br>
</body>
</html>