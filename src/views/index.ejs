<!DOCTYPE html>
<html>
<head>
    <title>Fake Store</title>
    <style>
        .border{
            border: 1px solid black;
        }
    </style>
</head>
 
<body>
  <h1>
    Product list:

  </h1>   
  <table id="products-table" class="border">
    <tr>
        <th>Sr.No.</th>
        <th>Product_Image</th>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Description</th>
    </tr>
         <% for(let i=0; i<data.length; i++){ %>
            <tr>
                
                <td class="border">
                    <%=i%> 
               </td>
                <td class="border">
                     <img width="200" src="<%=data[i].image%>" alt="ProductImg">  </br>
                </td>
                <td class="border">
                     <%=data[i].title%> 
                </td>
                <td class="border">
                    <%=data[i].category%>
                </td>
                <td class="border">
                     <%=data[i].price%>
                </td>
                <td class="border">
                     <%=data[i].description%>
                </td>
            </tr>
         <% } %>
    </table>
    <br>

    <h2>Users Table:</h2>
    <table id="users-table" class="border">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
        </tr>

             <% for(let i=0; i<users.length; i++){ %>
                <tr>
                    
                    <td class="border">
                        <%=users[i].id%> 
                   </td>
                    <td class="border">
                         <%=users[i].name.firstname%>
                         <%=users[i].name.lastname%>
                    </td>
                    <td class="border">
                         <%=users[i].email%> 
                    </td>
                    <td class="border">
                        <%=users[i].address.number%>
                        <%=users[i].address.street%>
                        <%=users[i].address.city%>
                        <%=users[i].address.zipcode%>
                    </td>
                    <td class="border">
                         <%=users[i].phone%>
                    </td>

                </tr>
             <% } %>
        </table>

    <br>

    <form id="post-form" action="/newlist" method="post">
        <fieldset>
            <legend>Add Product:</legend>
            <input name="title" id="title" type="text" placeholder="Product Name">   <br>
            <input name="category" id="category" type="text" placeholder="Category"> <br>
            <input name="price" id="price" type="text" placeholder="Price"> <br>
            <input name="description" id="description" type="text" placeholder="Description">   <br>
            <input name="image" id="image" type="text" placeholder="Image Url"> <br>
            <input type="submit" value="Add Product">
        </fieldset>
    </form>
 </body>
</html>