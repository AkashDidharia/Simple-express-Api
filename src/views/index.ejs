<!DOCTYPE html>
<html>
<head>
    <title>Fake Store</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
 
<body class="container">
  <h1 class="bg-dark rounded text-white text-center">
    Product list
</h1>   

  <table id="products-table" class="table table-striped">
    <thead>
    <tr class="bg-primary text-white text-center">
        <th>Id</th>
        <th>Product_Image</th>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Description</th>
    </tr>
    </thead>
         <% data.forEach((item)=>{ %>
            <tr>
                
                <td>
                    <%=item.id%> 
               </td>
                <td>
                     <img width="100" src="<%=item.image%>" alt="ProductImg">  </br>
                </td>
                <td>
                     <%=item.title%> 
                </td>
                <td>
                    <%=item.category%>
                </td>
                <td>
                     <%=item.price%>
                </td>
                <td>
                     <%=item.description%>
                </td>
            </tr>
         <% }) %>
    </table>
    <br>

    <h1 class="bg-dark rounded text-white text-center">Users Table</h1>
    <table id="users-table" class="table table-striped m-2">
        <thead>
        <tr class="bg-primary text-white text-center">
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
        </tr>
    </thead>


         <% users.forEach((item)=>{ %>
                <tr>
                    
                    <td>
                        <%=item.id%> 
                   </td>
                    <td>
                         <%=item.name.firstname%>
                         <%=item.name.lastname%>
                    </td>
                    <td>
                         <%=item.email%> 
                    </td>
                    <td>
                        <%=item.address.number%>
                        <%=item.address.street%>
                        <%=item.address.city%>
                        <%=item.address.zipcode%>
                    </td>
                    <td>
                         <%=item.phone%>
                    </td>

                </tr>
             <% }) %>
        </table>

    <form id="post-form" action="/newlist" method="post">
        <fieldset class="border rounded bg-light my-5">
            <legend class="bg-dark rounded text-white px-3">Add Product</legend>
                <input name="title" id="title" type="text" class="col-2 mx-1" placeholder="Product Name">   
                <input name="category" id="category" type="text" class="col-2 mx-1" placeholder="Category"> 
                <input name="price" id="price" type="text" class="col-2 mx-1" placeholder="Price"> 
                <input name="description" id="description" class="col-2 mx-1" type="text" placeholder="Description">   
                <input name="image" id="image" type="text" class="col-2 mx-1" placeholder="Image Url"> 
                <!-- <div class="col-8"></div> -->
                <input class="col-10 mx-4 my-2" type="submit" value="Add Product">
        </fieldset>
    </form>
 </body>
</html>